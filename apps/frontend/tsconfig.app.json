{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* ðŸ‘‡ MUY IMPORTANTE */
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@world-forge/domain": ["../../../domain/index"]
    },

    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",
    "isolatedModules": true,
    "noEmit": true,

    "skipLibCheck": true
  },
  "include": ["src"]
}
